<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    tools:context=".GameActivity">



    <TextView
        android:id="@+id/userSignIn_tv_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="50dp"
        android:layout_marginBottom="0dp"

        android:text="Rock-Paper-Scissor"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        />





    <TextView

        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="100dp"
        android:layout_marginBottom="0dp"
        android:paddingLeft="0dp"

        android:text="You    /    Mr. Robot"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="italic"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/scoreYou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"


            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:paddingLeft="0dp"

            android:text="            0"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/scoreRobot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"


            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="0dp"

            android:text="     0"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="italic"
            />


    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btn_1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"


            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"

            android:background="@color/white"
            app:backgroundTint="@null"

            android:text="Rock"
            android:textColor="@color/black"
            android:textSize="15sp"

            />
        <Button
            android:id="@+id/btn_2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"


            android:layout_marginTop="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"

            android:background="@color/white"
            app:backgroundTint="@null"

            android:text="Paper"
            android:textColor="@color/white"
            android:textSize="15sp"

            />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"


            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"

            android:background="@drawable/button_light_green_s1"
            app:backgroundTint="@null"

            android:text="Scissor"
            android:textColor="@color/black"
            android:textSize="15sp"

            />





    </LinearLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="80dp"
        android:layout_marginBottom="0dp"

        android:text="Player who reaches 10 points first wins!"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="italic"
        />




</LinearLayout>


